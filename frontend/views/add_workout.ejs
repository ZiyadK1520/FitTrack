<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Add your Workout</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="name">Workout</label>
                            <input type="text" name="Workout" class="form-control form-control-lg" placeholder="Enter workout name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="sets">Sets</label>
                            <input type="number" name="Sets" class="form-control form-control-lg" placeholder="Enter number of sets" required/>
                        </div>
                        <div class="mb-3">
                            <label for="reps">Reps</label>
                            <input type="number" name="Reps" class="form-control form-control-lg" placeholder="Enter number of reps" required/>
                        </div>
                        <div class="mb-3">
                            <label for="target">Targeted Muscle</label>
                            <input type="text" name="Target" class="form-control form-control-lg" placeholder="Enter the muscle(s) worked" required/>
                        </div>
                        <div class="mb-3">
                            <label for="weight">Weight</label>
                            <input type="text" name="Weight" class="form-control form-control-lg" placeholder="Enter the weight used" required/>
                        </div>
                       
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add Workout" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')  %>